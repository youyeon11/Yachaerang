<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yachaerang.backend.api.favorite.repository.FavoriteMapper">

    <resultMap id="favoriteResultMap"
               type="com.yachaerang.backend.api.favorite.entity.Favorite">
        <id property="favoriteId" column="favorite_id"/>
        <result property="memberId" column="member_id"/>
        <result property="productCode" column="product_code"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
        <result property="periodType" column="period_type"
                typeHandler="com.yachaerang.backend.global.util.PeriodTypeHandler"/>
    </resultMap>
    <!-- DTO -->
    <resultMap id="favoriteReadResultMap"
               type="com.yachaerang.backend.api.favorite.dto.response.FavoriteResponseDto$ReadDto">
        <id property="favoriteId" column="favorite_id"/>
        <result property="itemCode" column="item_code"/>
        <result property="itemName" column="item_name"/>
        <result property="productCode" column="product_code"/>
        <result property="productName" column="name"/>
        <!-- String 일 경우 TypeHandler 불필요 -->
        <result property="periodType" column="period_type" javaType="String"/>
    </resultMap>

    <!-- save -->
    <insert id="save"
            parameterType="com.yachaerang.backend.api.favorite.entity.Favorite"
            useGeneratedKeys="true"
            keyProperty="favoriteId">
        INSERT INTO favorite
            (member_id, product_code, period_type)
        VALUES (#{memberId}, #{productCode}, #{periodType})
    </insert>

    <!-- deleteByIdAndMemberId -->
    <delete id="deleteByIdAndMemberId">
        DELETE FROM favorite
        WHERE member_id = #{memberId}
          AND favorite_id = #{favoriteId}
    </delete>

    <!-- findByMemberIdAndProductCode -->
    <select id="findByMemberIdAndProductCode"
            resultMap="favoriteReadResultMap">
        SELECT
            f.favorite_id,
            p.item_code,
            p.item_name,
            f.product_code,
            p.name,
            f.period_type as period_type
        FROM favorite f
                 LEFT JOIN product p ON p.product_code = f.product_code
        WHERE f.member_id = #{memberId}
          AND f.product_code = #{productCode}
          AND f.period_type = #{periodType}
    </select>

    <!-- findAllByMemberId -->
    <select id="findAllByMemberId" resultMap="favoriteReadResultMap">
        SELECT
            f.favorite_id,
            p.item_code,
            p.item_name,
            p.product_code,
            p.name,
            f.period_type AS period_type
        FROM favorite f
                 LEFT JOIN product p ON p.product_code = f.product_code
        WHERE f.member_id = #{memberId}
        ORDER BY f.created_at DESC
    </select>
</mapper>