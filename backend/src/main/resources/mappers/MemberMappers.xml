<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yachaerang.backend.api.member.mapper.MemberMapper">
    <!-- Base Entity -->
    <resultMap id="baseResultMap" type="com.yachaerang.backend.api.common.BaseEntity">
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <!-- Member Result Map -->
    <resultMap id="memberResultMap" type="com.yachaerang.backend.api.member.entity.Member"
               extends="baseResultMap">
        <id property="id" column="member_id"/>
        <result property="name" column="name"/>
        <result property="password" column="password"/>
        <result property="email" column="email"/>
        <result property="nickname" column="nickname"/>
        <result property="memberCode" column="member_code"/>
        <result property="memberStatus" column="member_status"/>
        <result property="role" column="role"/>
    </resultMap>

    <!-- SQL Fragment -->
    <sql id="memberColumns">
        member_id, name, password, email, nickname, member_code, member_status, role, created_at, updated_at
    </sql>

    <!-- 회원 ID로 조회 -->
    <select id="findById" resultMap="memberResultMap">
        SELECT <include refid="memberColumns"/>
        FROM member
        WHERE member_id = #{id}
    </select>

    <!-- 회원 이름으로 조회 -->
    <select id="findByEmail" resultMap="memberResultMap">
        SELECT <include refid="memberColumns"/>
        FROM member
        WHERE email = #{email}
    </select>

    <!-- 회원 전체 조회 -->
    <select id="findAll" resultMap="memberResultMap">
        SELECT <include refid="memberColumns"/>
        FROM member
        ORDER BY created_at DESC
    </select>

    <!-- 회원 등록 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id" keyColumn="member_id">
        INSERT INTO member (name, password, email, nickname, member_code, member_status, role, created_at, updated_at)
        VALUES (#{name}, #{password}, #{email}, #{nickname}, #{memberCode}, #{memberStatus}, #{role}, CURRENT_TIMESTAMP, CURRENT_TIMESTAMP)
    </insert>

    <!-- 회원 수정 -->
    <update id="update">
        UPDATE member
        SET name = #{name},
            password = #{password},
            email = #{email},
            nickname = #{nickname},
            member_code = #{memberCode},
            member_status = #{memberStatus},
            role = #{role},
            updated_at = CURRENT_TIMESTAMP
        WHERE member_id = #{id}
    </update>

    <!-- 회원 삭제 -->
    <delete id="delete">
        DELETE FROM member WHERE member_id = #{id}
    </delete>

</mapper>