<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yachaerang.backend.api.mapper.ArticleMapper">

    <!-- Base Entity Result Map -->
    <resultMap id="baseResultMap" type="com.yachaerang.backend.api.common.BaseEntity">
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <!-- Tag Result Map -->
    <resultMap id="tagResultMap" type="com.yachaerang.backend.api.tag.Tag">
        <id property="id" column="tag_id"/>
        <result property="name" column="tag_name"/>
    </resultMap>

    <!-- Article Result Map (without tags) -->
    <resultMap id="articleResultMap" type="com.yachaerang.backend.api.article.entity.Article"
               extends="baseResultMap">
        <id property="id" column="article_id"/>
        <result property="title" column="title"/>
        <result property="content" column="content" jdbcType="LONGVARCHAR"/>
    </resultMap>

    <!-- Article Result Map (with tags) -->
    <resultMap id="articleWithTagsResultMap" type="com.yachaerang.backend.api.article.entity.Article"
               extends="baseResultMap">
        <id property="id" column="article_id"/>
        <result property="title" column="title"/>
        <result property="content" column="content" jdbcType="LONGVARCHAR"/>
        <collection property="tagList" resultMap="tagResultMap"/>
    </resultMap>

    <!-- SQL Fragment -->
    <sql id="articleColumns">
        a.article_id, a.title, a.content, a.created_at, a.updated_at
    </sql>

    <sql id="articleWithTagColumns">
        a.article_id, a.title, a.content, a.created_at, a.updated_at,
        t.tag_id, t.name as tag_name
    </sql>

    <!-- 게시글 ID로 조회 (태그 포함) -->
    <select id="findById" resultMap="articleWithTagsResultMap">
        SELECT <include refid="articleWithTagColumns"/>
        FROM article a
        LEFT JOIN article_tag at ON a.article_id = at.article_id
        LEFT JOIN tag t ON at.tag_id = t.tag_id
        WHERE a.article_id = #{id}
    </select>

    <!-- 게시글 전체 조회 (태그 제외) -->
    <select id="findAll" resultMap="articleResultMap">
        SELECT <include refid="articleColumns"/>
        FROM article a
        ORDER BY a.created_at DESC
    </select>

    <!-- 게시글 전체 조회 (태그 포함) -->
    <select id="findAllWithTags" resultMap="articleWithTagsResultMap">
        SELECT <include refid="articleWithTagColumns"/>
        FROM article a
        LEFT JOIN article_tag at ON a.article_id = at.article_id
        LEFT JOIN tag t ON at.tag_id = t.tag_id
        ORDER BY a.created_at DESC
    </select>

    <!-- 게시글 등록 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id" keyColumn="article_id">
        INSERT INTO article (title, content, created_at, updated_at)
        VALUES (
                   #{title},
                   #{content, jdbcType=LONGVARCHAR},
                   CURRENT_TIMESTAMP,
                   CURRENT_TIMESTAMP
               )
    </insert>

    <!-- 게시글 수정 -->
    <update id="update">
        UPDATE article
        SET title = #{title},
            content = #{content, jdbcType=LONGVARCHAR},
            updated_at = CURRENT_TIMESTAMP
        WHERE article_id = #{id}
    </update>

    <!-- 게시글 삭제 -->
    <delete id="delete">
        DELETE FROM article WHERE article_id = #{id}
    </delete>

</mapper>